<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details">

    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:fontFamily="@font/montserrat_black"
                android:padding="10sp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"/>

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_arrow_back" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/tow_id"
        android:layout_below="@id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ID"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rider_name"
        android:layout_below="@id/tow_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rider Name:"
            android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RN"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------"
                android:fontFamily="@font/poppins_medium"
                android:visibility="invisible"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/package_name"
        android:layout_below="@id/rider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Name:"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/PN"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------"
                android:fontFamily="@font/poppins_medium"
                android:visibility="invisible"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/package_weight"
        android:layout_below="@id/package_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Package Weight:"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/PW"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------"
                android:fontFamily="@font/poppins_medium"
                android:visibility="invisible"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pickup_location"
        android:layout_below="@id/package_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sender Address:"
            android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/SA"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------"
                android:fontFamily="@font/poppins_medium"
                android:visibility="invisible"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dropoff_location"
        android:layout_below="@id/pickup_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receiver Address:"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RA"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------"
                android:fontFamily="@font/poppins_medium"
                android:visibility="invisible"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>